[commit]
  gpgsign = true

[pull]
  rebase = merges

[merge]
  tool = opendiff

[diff]
  tool = opendiff

[mergetool]
  prompt     = false
  keepBackup = false
  ; trustExitCode = true

[mergetool "opendiff"]
  cmd = opendiff $LOCAL $REMOTE -merge $MERGED

[mergetool "vscode"]
  cmd = code --wait $MERGED

[difftool]
  prompt = false

[difftool "opendiff"]
  cmd = opendiff "$LOCAL" "$REMOTE"

[filter "media"]
  required = true
  clean    = git media clean %f
  smudge   = git media smudge %f

[filter "lfs"]
  process  = git-lfs filter-process
  required = true
  clean    = git-lfs clean -- %f
  mudge    = git-lfs smudge -- %f
  smudge   = git-lfs smudge -- %f

